
<view class="container greybg">
    <view class="account-wrap">
        <view class="hd" data-settype="name" bindtap="goMobileVerify">
            用户名：
            <span class="uname">{{loginName}}</span>
        </view>
        <view class="accoutn-bind">
            <view class="item">
                <view class="left">
                    <i class="icon ion-ios-telephone-outline"></i>
                    <view class="t">登录手机</view>
                </view>
                <button class="btn" data-settype="mobile" bindtap="goMobileVerify">修改手机</button>
            </view>
            <view class="item">
                <view class="left">
                    <i class="icon ion-ios-email-outline"></i>
                    <view class="t">登录邮箱</view>
                </view>
                <button class="btn" data-settype="email" bindtap="goMobileVerify">修改邮箱</button>
            </view>
            <view class="item">
                <view class="left">
                    <i class="icon ion-ios-locked-outline"></i>
                    <view class="t">登录密码</view>
                </view>
                <button class="btn" data-settype="password" bindtap="goMobileVerify">修改密码</button>
            </view>
        </view>
    </view>
</view>