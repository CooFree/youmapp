<!--pages/product/productDetail/productDetail.wxml-->
<wxs src="../../../utils/tools.wxs" module="tools" />

<view class="container greybg {{showSelector? 'fullhide': ''}}">
    <view class="zw-banner detail-swiper">
        <swiper indicator-dots="true" indicator-color="#fff" circular="true" indicator-active-color="#d2ab44" autoplay="true" interval="5000"
            duration="500">
            <block wx:for="{{productDetail.default_image_list}}">
                <swiper-item>
                    <image src="{{tools.httpsuri(item)}}" class="slide-image" width="750" height="376" />
                </swiper-item>
            </block>
        </swiper>
    </view>

    <view class="dt-section">
        <view wx:if="{{specificateData.limittime_flag}}" class="m-flashSale detailFlashSale active">
            <view class="left">
                <span class="title">限时购</span>
                <span class="status">抢购中...</span>
            </view>
            <view class="right">
                <span class="s1">离结束还剩</span>
                <span class="t1">{{limittime? limittime : '0:00:00:0'}}</span>
            </view>
        </view>
        <view class="m-detailBase">
            <view class="info">
                <view class="name">{{tools.decodeuri(productDetail.product.name)}}</view>
                <view class="desc">{{tools.decodeuri(productDetail.product.intro)}}</view>
                <block wx:if="{{specificateData.limittime_flag && limittime}}">
                    <view class="price">￥{{specificateData.limittime_price}} -￥{{specificateData.prod_price}} </view>
                </block>
                <block wx:else>
                    <view class="price">￥{{specificateData.prod_price}} </view>
                </block>

                <!-- <view class="taglist">
                    <view class="wrap"></view>
                </view> -->
            </view>
            <view class="comment collet">
                <view class="wrap" bindtap="setStore" data-prod-id="{{productDetail.product.id}}">
                    <i wx:if="{{storeflag}}" class="icon-fullstar ion-ios-star-outline"></i>
                    <i wx:else class="icon ion-ios-star-outline"></i>
                    <view class="more">
                        <text>{{storeflag? '取消': '收藏'}}</text>
                    </view>
                </view>
            </view>
        </view>
    </view>

    <view class="dt-section-2">

        <view class="m-listItem " bindtap="toggleSelector">
            <block wx:if="{{finlColor && finlSize}}">
                <view class="left">
                    <text class="txt">已选：{{tools.decodeuri(finlColor)}}， {{tools.decodeuri(finlSize)}}</text>
                </view>
            </block>
            <block wx:else>
                <view class="left">
                    <text class="txt">请选择规格数量</text>
                </view>
            </block>

            <view class="middle"></view>
            <view class="right">
                <i class="icon ion-ios-arrow-right"></i>
            </view>
        </view>
        <view class="m-listItem m-li-noborder">
            <view class="left">
                <text class="txt">服务：</text>
            </view>
            <view class="middle">
                <view class="m-serversEntry">
                    <view class="mse-wrap">
                        <view class="item">保价服务</view>
                        <view class="item">100%正品保障</view>
                    </view>
                    <view class="mse-wrap">
                        <view class="item">59元包邮</view>
                        <view class="item">七天无理由退换</view>
                    </view>
                </view>
            </view>
            <view class="right">
                <i class="icon ion-ios-arrow-right"></i>
            </view>
        </view>
    </view>

    <view class="dt-section-2 dt-section-3 dt-comment">
        <view class="m-listItem">
            <view class="left">
                <text class="txt">用户评价({{productDetail.comment_count > 99? '99+': productDetail.comment_count}})</text>
            </view>
            <view class="middle"></view>
            <view class="right">
                <navigator url="../productComment/productComment?prod_id={{productDetail.product.id}}">
                    <span class="more">查看全部</span>
                    <i class="icon ion-ios-arrow-right"></i>
                </navigator>
            </view>
        </view>
        <view class="comment-item">
            <block wx:for="{{productCommentList}}">
                <view class="comment-hd">
                    <view class="link">
                        <image class="avatar " src="https://img02.camel.com.cn/image/headportrait345.png" alt=""></image>
                        <text class="name">{{tools.decodeuri(item.member_name)}}</text>
                    </view>
                </view>
                <view class="extraInfo">
                    <text class="time">{{item.comment_time}}</text>
                    <text class="skus">,{{tools.decodeuri(item.color)}} {{tools.decodeuri(item.size)}}</text>
                </view>
                <view class="content">
                    <p class="txt">{{tools.decodeuri(item.content)}}</p>
                </view>
            </block>
            <view class="commentPics" wx:if="{{productCommentList[0].images.length > 0}}">
                <ul class="list">
                    <li class="item" wx:for="{{productCommentList[0].images}}" bindtap="showPreview" data-url="{{item.image_url}}">
                        <image class="img" mode="widthFix" src="{{item.image_url}}" alt=""></image>
                    </li>
                </ul>
            </view>
        </view>
    </view>

    <view class="dt-section-2 de-content">
        <view class="deitalInfos">
            <view class="m-attrCon">
                <view class="attrList">
                    <view class="tt">商品参数</view>
                    <view class="item">
                        <view class="left">货号</view>
                        <view class="right">
                            <view class="con">{{productDetail.product.code}}</view>
                        </view>
                    </view>
                </view>
            </view>
            <block wx:for="{{productDetail.detail_image_list}}">
                <image src="{{item.url}} " alt=" " mode="widthFix"></image>
            </block>
        </view>
        <view class="m-commonIssues m-rmcdGoods">
            <view class="tt">
                <view class="line"></view>
                <span class="text">大家都在看</span>
            </view>
            <view class=""></view>
        </view>
    </view>

    <!-- 规格选择 -->
    <view class="dt-paramselect g-row " wx:if="{{showSelector}}">
        <view class="info-con">
            <view class="left">
                <image class="pic " src="{{finlImg? finlImg : productDetail.default_image}}" alt=""></image>
            </view>
            <view class="right">
                <view class="con">
                    <view class="price">
                        价格：¥ {{specificateData.limittime_price? specificateData.limittime_price : specificateData.prod_price}}
                    </view>
                    <block wx:if="{{finlColor && finlSize}}">
                        <view class="sku">
                            已选择：{{tools.decodeuri(finlColor)}}， {{tools.decodeuri(finlSize)}}
                        </view>
                    </block>
                    <block wx:else>
                        <view class="sku">
                            已选择：请选择
                        </view>
                    </block>
                </view>
            </view>
        </view>
        <view class="spec-con">
            <view class="tt">
                颜色
            </view>
            <view class="con">
                <block wx:if="{{selectSize.length> 0}}">
                    <view class="tab {{item[1] === 1? '':'tab-dis'}} {{selectColorIndex === index ? 'tab-sel' : ''}}" wx:for="{{selectSize}}"
                        bindtap="selectColor" data-dis="{{item[1] === 1? false: true}}" data-keys="{{item}}" data-index="{{index}}">
                        <text class="txt">{{tools.decodeuri(item[0])}}</text>
                    </view>
                </block>
                <block wx:else>
                    <view class="tab {{item[1] === 1? '':'tab-dis'}} {{selectColorIndex === index ? 'tab-sel' : ''}}" wx:for="{{arrayColor}}"
                        bindtap="selectColor" data-dis="{{item[1] === 1? false: true}}" data-keys="{{item}}" data-index="{{index}}">
                        <text class="txt">{{tools.decodeuri(item[0])}}</text>
                    </view>
                </block>
            </view>
            <view class="tt">
                尺码
            </view>
            <view class="con">
                <block wx:if="{{selectColor.length > 0}}">
                    <view class="tab {{item[1] === 1? '':'tab-dis'}} {{selectSizeIndex === index ? 'tab-sel' : ''}}" wx:for="{{selectColor}}"
                        bindtap="selectSize" data-dis="{{item[1] === 1? false: true}}" data-keys="{{item}}" data-index="{{index}}">
                        <span class="txt">{{tools.decodeuri(item[0])}}</span>
                    </view>
                </block>
                <block wx:else>
                    <view class="tab {{item[1] === 1? '':'tab-dis'}} {{selectSizeIndex === index ? 'tab-sel' : ''}}" wx:for="{{arraySize}}" bindtap="selectSize"
                        data-dis="{{item[1] === 1? false: true}}" data-keys="{{item}}" data-index="{{index}}">
                        <span class="txt">{{tools.decodeuri(item[0])}}</span>
                    </view>
                </block>
            </view>
            <view class="tt">
                数量
            </view>
            <view class="con m-selNumRow">
                <view class="m-selnum">
                    <block wx:if="{{finlVolume <= 1}}">
                        <view class="less dis">
                            <i class="icon ion-ios-minus-empty"></i>
                        </view>
                    </block>
                    <block wx:else>
                        <view class="less" bindtap="reduceVolume">
                            <i class="icon ion-ios-minus-empty"></i>
                        </view>
                    </block>
                    <view class="textWrap">
                        <input type="number" value="{{finlVolume}}" bindinput="setVolume" class="txt" />
                    </view>
                    <block wx:if="{{finlVolume >= specItem.reserve || finlVolume >= productDetail.product.reserve}}">
                        <view class="plus dis">
                            <i class="icon ion-ios-plus-empty"></i>
                        </view>
                    </block>
                    <block wx:else>
                        <view class="plus" bindtap="addVolume">
                            <i class="icon ion-ios-plus-empty"></i>
                        </view>
                    </block>
                </view>
            </view>
        </view>
    </view>

    <div class="commentpic-preview" wx:if="{{previewCommentpic}}" bindtap="hidePreview">
        <div class="pic-box">
            <image mode="widthFix" style="width:96%; margin-right:-1.5%;" src="{{previewCommentpic}}" alt=""></image>
        </div>
    </div>

    <view class="m-btnGroup">
        <div class="inner">
            <block wx:if="{{showSelector}}">
                <text class="btn btn1" bindtap="toggleSelector">《 返回</text>
            </block>
            <block wx:else>
                <view class="btn btn1">
                    <image mode="widthFix" style="width:50rpx;" src="http://img02.camel.com.cn/image/pro_mes.png" alt=""></image>
                </view>
            </block>
            <view class="btn btn1">
                <image mode="widthFix" style="width:50rpx;" src="http://img02.camel.com.cn/image/pro_sci.png" alt=""></image>
            </view>
            <view class="btn btn2">立即购买</view>
            <view class="btn btn3">加入购物车</view>
        </div>
    </view>
</view>