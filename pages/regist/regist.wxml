<!--pages/regist/regist.wxml-->
<wxs src="../../utils/tools.wxs" module="tools" />
<view class="container ">
    <view class="g-row">
        <view class="login-form">
            <view class="inputwrap">
                <view class="inputBox">
                    <input type="text" class="j-inputtext lophone" placeholder="手机号" maxlength="100" value="" />
                    <view class="utip">
                        <i class="icon u-clear ion-ios-close"></i>
                    </view>
                </view>
            </view>
            <view class="inputwrap">
                <view class="inputBox">
                    <input type="password" class="j-inputtext lophone" placeholder="密码" maxlength="100" value="" />
                    <view class="utip">
                        <i class="icon u-clear ion-ios-close"></i>
                    </view>
                </view>
            </view>
            <view class="inputwrap">
                <view class="inputBox">
                    <input type="password" class="j-inputtext lophone" placeholder="确认密码" maxlength="100" value="" />
                    <view class="utip">
                        <i class="icon u-clear ion-ios-close"></i>
                    </view>
                </view>
            </view>
            <view class="inputwrap">
                <view class="inputBox scode">
                    <input type="number" class="j-inputtext lophone" placeholder="短信验证码" maxlength="6" value="" />
                    <view class="utip">
                        <i class="icon u-clear ion-ios-close"></i>
                    </view>
                    <view class="getbox">
                        <view class="getcode">
                            获取验证码
                        </view>
                    </view>
                </view>
            </view>
            <view class="btn-login">
                <text class="ben-login-txt">注册</text>
            </view>
        </view>
    </view>
</view>